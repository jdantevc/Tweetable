<%= form_with(model: @reply, url: reply_tweet_path(@tweet), method: :post, class: 'new-tweet-form') do |form| %>
  <%= form.hidden_field :replied_to_id, value: @tweet.id %>
  <%= form.text_area :body, placeholder: 'Something to say about it?', rows: 3, required: true %>
  <%= form.submit 'Tweet', class: 'button button--primary'%>
<% end %>